<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Assign To"
            android:ems="10"
            android:id="@+id/assignTo"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Chore"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/name"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Assign by"
            android:ems="10"
            android:id="@+id/assignBy"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/assignTo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Save Chore"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/assignBy"
            app:layout_constraintHorizontal_bias="0.5"/>

</android.support.constraint.ConstraintLayout>